<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:hyman="http://schemas.android.com/apk/res/com.example.liuzhuang.viewpagerindicator"
    android:background="#ffffff"
    >
    <!--
    xmlns:hyman="http://schemas.android.com/apk/res/com.example.liuzhuang.viewpagerindicator"

    -->

    <com.example.liuzhuang.viewpagerindicator.ViewPagerIndicator
        android:id="@+id/id_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_background"
        android:orientation="horizontal"
        hyman:visiable_tab_count="4"
        >
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="短信1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"
            />
        <TextView
            android:id="@+id/tv_shoucang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="收藏2"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#CCFFFFFF"
            />
        <TextView
            android:id="@+id/tv_tuijian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="推荐3"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#CCFFFFFF"
            />
        <TextView
            android:id="@+id/tv_message1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="短信4"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"
            />
        <TextView
            android:id="@+id/tv_shoucang1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="收藏5"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#CCFFFFFF"
            />
        <TextView
            android:id="@+id/tv_tuijian1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="推荐6"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#CCFFFFFF"
            />
        <TextView
            android:id="@+id/tv_message2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="短信7"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"
            />
        <TextView
            android:id="@+id/tv_shoucang2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="收藏8"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#CCFFFFFF"
            />
        <TextView
            android:id="@+id/tv_tuijian2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="推荐9"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#CCFFFFFF"
            />

    </com.example.liuzhuang.viewpagerindicator.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/id_viewpager"
        >


    </android.support.v4.view.ViewPager>

</LinearLayout>
